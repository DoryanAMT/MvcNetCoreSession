@{
    Mascota mascota = ViewData["MASCOTA"] as Mascota;
}

<h1>Session Binary Mascota</h1>

<h2>@ViewData["MENSAJE"]</h2>
<p>
    <a asp-controller="EjemploSession"
       asp-action="SessionMascotas"
       asp-route-accion="almacenar">
       Almacenar
    </a>
    <a asp-controller="EjemploSession"
       asp-action="SessionMascotas"
       asp-route-accion="mostrar">
        Mostrar
    </a>
</p>
@if(mascota != null){
    <h1 style="color:blue">
       Nombre: @mascota.Nombre, Raza: @mascota.Raza, Edad: @mascota.Edad
    </h1>
}